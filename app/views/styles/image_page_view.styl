#image-page-view
  .button
    display: block
    position: absolute
    top: 0
    width: 250px
    height: 100%
    
    background-repeat: no-repeat
    background-position: center center
    
  #leftBtn
    left: 0
    background-image: url(../images/left.png)
    
  #rightBtn
    right: 0
    background-image: url(../images/right.png)
    
  #tags
    margin-top: 16px
    padding: 10px
    height: 20px
    
  .tag
    margin: 3px
    padding: 7px 10px
    background-color: #ccc
